@model LTLHelp.Models.Campaign
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Sửa chiến dịch";
}

<h2>Sửa chiến dịch</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="CampaignId" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GoalAmount"></label>
        <input asp-for="GoalAmount" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Loại chiến dịch</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(ViewBag.Categories)">
            <option value="">-- Chọn loại chiến dịch --</option>
        </select>
    </div>

    <!-- 🔥 HIỆN ẢNH ĐANG LƯU + CHỌN ẢNH MỚI -->
    <div class="form-group mt-3">
        <label>Ảnh hiện tại</label><br />

        <img id="imgPreview"
             src="@Url.Content(Model.ImageUrl ?? "~/assets/img/no-image.png")"
             style="max-width: 220px; margin-bottom:10px; border-radius: 10px;" />

        <input type="file" name="ImageFile" class="form-control" onchange="previewImage(event)" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Hủy</a>
</form>

<script>
    function previewImage(event) {
        var reader = new FileReader();
        reader.onload = function () {
            document.getElementById('imgPreview').src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>
