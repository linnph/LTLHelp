@model LTLHelp.Models.Campaign

<h2>Sửa chiến dịch</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CampaignId" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GoalAmount"></label>
        <input asp-for="GoalAmount" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="RaisedAmount"></label>
        <input asp-for="RaisedAmount" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Hủy</a>
</form>


