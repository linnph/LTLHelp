@model IEnumerable<LTLHelp.Models.BlogPost>

<h2 class="mb-3">📰 Quản lý Tin tức & Bài viết</h2>

<p>
    <a href="/Admin/Blog/Create" class="btn btn-primary">
        <i class="fas fa-plus-circle"></i> Thêm bài viết
    </a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="bg-light">
        <tr>
            <th>Tiêu đề</th>
            <th>Danh mục</th>
            <th>Ngày đăng</th>
            <th>Trạng thái</th>
            <th class="text-right">Hành động</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.BlogCategory?.Name</td>
                <td>@item.PublishedAt?.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (item.IsPublished == true)
                    {
                        <span class="badge badge-success">Đã đăng</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Nháp</span>
                    }
                </td>

                <td class="text-right">
                    <a href="/Admin/Blog/Edit/@item.BlogPostId" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Sửa
                    </a>

                    <a href="/Admin/Blog/Delete/@item.BlogPostId"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Xóa bài viết này?')">
                        <i class="fas fa-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
