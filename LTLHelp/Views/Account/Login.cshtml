@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--==============================
    Breadcumb
============================== -->
<div class="breadcumb-wrapper " data-bg-src="/assets/img/bg/breadcumb-bg.jpg" data-overlay="theme">
    <div class="container">
        <div class="breadcumb-content">
            <h1 class="breadcumb-title">Đăng Nhập</h1>
            <ul class="breadcumb-menu">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li>Đăng Nhập</li>
            </ul>
        </div>
    </div>
</div>

<!--==============================
Login Area   
==============================-->
<div class="space overflow-hidden position-relative z-index-common">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8">
                <div class="contact-form-v1">
                    <div class="text-center mb-40">
                        <h2 class="sec-title">Chào Mừng Trở Lại</h2>
                        <p class="sec-text">Vui lòng đăng nhập vào tài khoản của bạn</p>
                    </div>
                    
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <form asp-action="Login" method="POST" class="contact-form style-border">
                        <div class="row">
                            <div class="form-group style-border col-12">
                                <i class="fal fa-envelope"></i>
                                <input type="email" class="form-control" name="email" id="email" placeholder="Email hoặc Username" required>
                            </div>
                            <div class="form-group style-border col-12">
                                <i class="fal fa-lock"></i>
                                <input type="password" class="form-control" name="password" id="password" placeholder="Mật khẩu" required>
                            </div>
                            <div class="form-group col-12 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="remember" name="remember">
                                    <label class="form-check-label" for="remember">Ghi nhớ đăng nhập</label>
                                </div>
                                <a href="#" class="text-decoration-none" style="color: var(--theme-color);">Quên mật khẩu?</a>
                            </div>
                            <div class="form-btn col-12">
                                <button type="submit" class="th-btn w-100">Đăng Nhập</button>
                            </div>
                            <div class="col-12 text-center mt-4">
                                <p class="mb-0">Chưa có tài khoản? <a href="@Url.Action("Register", "Account")" class="text-decoration-none" style="color: var(--theme-color); font-weight: 600;">Đăng Ký Ngay</a></p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

