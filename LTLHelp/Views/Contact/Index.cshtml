@{
    ViewData["Title"] = "Liên Hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--==============================
    Breadcumb
============================== -->
<div class="breadcumb-wrapper " data-bg-src="/assets/img/bg/cta-bg4-1.jpg" data-overlay="theme">
    <div class="container">
        <div class="breadcumb-content">
            <h1 class="breadcumb-title">Liên Hệ Chúng Tôi</h1>
            <ul class="breadcumb-menu">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li>Liên Hệ</li>
            </ul>
        </div>
    </div>
</div>


<!--==============================
Contact Area   
==============================-->
<div class="space overflow-hidden contact-area-1 position-relative z-index-common" id="contact-sec">
    <div class="container">
        <div class="contact-wrap1">
            <div class="row gx-60 gy-40">
                <div class="col-xl-4 col-lg-5">
                    <div class="contact-feature">
                        <div class="box-icon">
                            <i class="fas fa-map-location-dot"></i>
                        </div>
                        <div class="media-body">
                            <h3 class="box-title">Địa Chỉ</h3>
                            <p class="box-text">
                                Đại Học Vinh, Nghệ An
                            </p>
                        </div>
                    </div>
                    <div class="contact-feature">
                        <div class="box-icon" data-theme-color="#FFAC00">
                            <i class="fas fa-phone-volume"></i>
                        </div>
                        <div class="media-body">
                            <h3 class="box-title">Điện Thoại</h3>
                            <p class="box-text"><a href="tel:0123456789">0123-456-789</a></p>
                            <p class="box-text"><a href="tel:0987654321">0987-654-321</a></p>
                        </div>
                    </div>
                    <div class="contact-feature">
                        <div class="box-icon" data-theme-color="#122F2A">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="media-body">
                            <h3 class="box-title">Email</h3>
                            <p class="box-text"><a href="mailto:info@ltlhelp.com">info@ltlhelp.com</a></p>
                            <p class="box-text"><a href="mailto:support@ltlhelp.com">support@ltlhelp.com</a></p>
                        </div>
                    </div>
                    <div class="contact-feature" data-theme-color="#FF5528">
                        <div class="box-icon">
                            <i class="fas fa-comment-question"></i>
                        </div>
                        <div class="media-body">
                            <h3 class="box-title">Có Câu Hỏi?</h3>
                            <p class="box-text">Khám phá thêm bằng cách ghé thăm chúng tôi hoặc tham gia cộng đồng của chúng tôi</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-8 col-lg-7">
                    <div class="contact-map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.126365714373!2d106.62965531526084!3d10.8230082618202!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752a3e7c8b8c3b%3A0x5c0c5c5c5c5c5c5c!2sHo%20Chi%20Minh%20City!5e0!3m2!1sen!2s!4v1234567890123!5m2!1sen!2s" allowfullscreen="" loading="lazy" style="width: 100%; height: 400px; border: 0;"></iframe>
                    </div>
                </div>
            </div>
            <div class="contact-page-form-wrap space-top">
                <div class="row gy-40">
                    <div class="col-xl-6 align-self-end">
                        <div class="contact-thumb1-1">
                            <img src="~/assets/img/normal/contact_1_1.png" alt="img">
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <!--==============================
                        Contact Area  
                        ==============================-->
                        <div class="contact-form-v1 contact-page-form">
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                            
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    <ul class="mb-0">
                                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
                            }
                            
                            <form action="@Url.Action("Index", "Contact")" method="POST" class="contact-form style-border">
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="form-group style-border col-12">
                                        <input type="text" class="form-control" name="name" id="name" placeholder="Họ và Tên *" required>
                                    </div>
                                    <div class="form-group style-border col-12">
                                        <input type="email" class="form-control" name="email" id="email" placeholder="Địa Chỉ Email *" required>
                                    </div>
                                    <div class="form-group style-border col-12">
                                        <input type="tel" class="form-control" name="phone" id="phone" placeholder="Số Điện Thoại">
                                    </div>
                                    <div class="form-group style-border col-12">
                                        <input type="text" class="form-control" name="subject" id="subject" placeholder="Chủ Đề">
                                    </div>
                                    <div class="form-group style-border col-12">
                                        <textarea name="message" id="message" cols="30" rows="5" class="form-control" placeholder="Nội dung tin nhắn *" required></textarea>
                                    </div>
                                    <div class="form-btn col-12">
                                        <button type="submit" class="th-btn">Gửi Tin Nhắn</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .alert {
        margin-bottom: 20px;
    }
    .contact-map iframe {
        border-radius: 10px;
    }
</style>

