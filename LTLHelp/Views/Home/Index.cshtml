<section class="space bg-gray" data-bg-src="~/assets/img/bg/ltlhelpion-bg1-1.png" id="ltlhelpion-sec">
    <div class="shape-mockup ltlhelpion-bg-shape1-1" data-bottom="0" data-right="0"><img src="~/assets/img/shape/ltlhelpion-shape1-1.png" alt="shape"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="title-area text-center">
                    <span class="sub-title">Hãy Bắt Đầu Đóng Góp</span>
                    <h2 class="sec-title">
                        Xem Tác Động Của Bạn: Minh Bạch
                        Các Chiến Dịch Đóng Góp
                    </h2>
                </div>
            </div>
        </div>
            <div class="slider-area">
                <div class="swiper th-slider has-shadow" id="ltlhelpionSlider1" data-slider-options='{"breakpoints":{"0":{"slidesPerView":1},"576":{"slidesPerView":"1"},"768":{"slidesPerView":"2"},"992":{"slidesPerView":"2"},"1200":{"slidesPerView":"3"}}, "autoHeight": "true"}'>
                <div class="swiper-wrapper">
                    @{
                        var themeColors = new[] { "", "var(--theme-color2)", "#FF5528" };
                        var imageIndexes = new[] { "1", "2", "3" };
                        int colorIndex = 0;
                        int imageIndex = 0;
                    }
                    @if (Model != null && Model.Campaigns != null && Model.Campaigns.Any())
                    {
                        @foreach (var campaign in Model.Campaigns)
                    {
                        var progressPercent = campaign.GoalAmount > 0 
                            ? (int)((campaign.RaisedAmount ?? 0) / campaign.GoalAmount.Value * 100) 
                            : 0;
                        var imageUrl = !string.IsNullOrEmpty(campaign.ImageUrl) 
                            ? (campaign.ImageUrl.StartsWith("http://") || campaign.ImageUrl.StartsWith("https://") 
                                ? campaign.ImageUrl 
                                : (campaign.ImageUrl.StartsWith("~") || campaign.ImageUrl.StartsWith("/") 
                                    ? campaign.ImageUrl 
                                    : "~/" + campaign.ImageUrl.TrimStart('/')))
                            : $"~/assets/img/ltlhelpion/ltlhelpion1-{imageIndexes[imageIndex % imageIndexes.Length]}.png";
                        var themeColor = themeColors[colorIndex % themeColors.Length];
                        
                        <div class="swiper-slide">
                            <div class="ltlhelpion-card" data-theme-color="@themeColor">
                                <div class="ltlhelpion-card-shape" data-mask-src="~/assets/img/ltlhelpion/ltlhelpion-card-bg-shape1-1.png"></div>
                                <div class="box-thumb">
                                    <img src="@(imageUrl.StartsWith("http://") || imageUrl.StartsWith("https://") ? imageUrl : Url.Content(imageUrl))" alt="@campaign.Title">
                                    <div class="ltlhelpion-card-tag">@progressPercent%</div>
                                </div>
                                <div class="box-content">
                                    <h3 class="box-title"><a href="@Url.Action("Details", "Campaign", new { id = campaign.CampaignId })">@campaign.Title</a></h3>
                                    <div class="ltlhelpion-card_progress-wrap">
                                        <div class="progress">
                                            <div class="progress-bar" style="width: @progressPercent%;">
                                            </div>
                                        </div>
                                        <div class="ltlhelpion-card_progress-content">
                                            <span class="ltlhelpion-card_raise">Đã Quyên Góp - @((campaign.RaisedAmount ?? 0).ToString("N0"))</span>
                                            <span class="ltlhelpion-card_goal">Mục Tiêu - @((campaign.GoalAmount ?? 0).ToString("N0"))</span>
                                        </div>
                                    </div>
                                    <a href="@Url.Action("Checkout", "Donation", new { campaignId = campaign.CampaignId })" class="th-btn style6">Quyên Góp Ngay <i class="fas fa-arrow-up-right ms-2"></i></a>
                                </div>
                            </div>
                        </div>
                        
                        colorIndex++;
                        imageIndex++;
                        }
                    }
                    else
                    {
                        <div class="swiper-slide">
                            <div class="ltlhelpion-card">
                                <div class="box-content text-center p-4">
                                    <p class="text-muted">Hiện tại chưa có chiến dịch nào. Vui lòng quay lại sau!</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
